{
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  },
    "compilerOptions": {
      "moduleDetection": "force",
      "module": "CommonJS",
      "target": "ES2022",
      "noImplicitAny": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "lib": ["ES2021", "DOM"],
      "moduleResolution": "node",
      "pretty": true,
      "resolveJsonModule": true,
      "jsx": "react"
    },
}